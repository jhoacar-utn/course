{
  "name": "final-project",
  "version": "0.1.0",
  "description": "Web server for final project.",
  "main": "./build/index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "npm run build-frontend && npm run build-backend",
    "build-backend": "tsc",
    "build-frontend": "npm run build --prefix frontend",
    "start": "node -r dotenv/config ./build/server.js",
    "watch": "concurrently -ki -c green,magenta,cyan \"npm:watch-build\" \"npm:watch-frontend\" \"npm:watch-src\"",
    "watch-backend": "concurrently -ki -c green,cyan \"npm:watch-build\" \"npm:watch-src\"",
    "watch-build": "nodemon -r dotenv/config ./build/server.js",
    "watch-frontend": "npm start --prefix frontend",
    "watch-src": "tsc -w"
  },
  "author": "Liam Marin <liam.marin03926@protonmail.com>",
  "license": "ISC",
  "engineStrict": true,
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@tsconfig/node16-strictest-esm": "^1.0.3",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^18.0.1",
    "concurrently": "^7.2.2",
    "nodemon": "^2.0.18",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-validator": "^6.14.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.4.2",
    "sequelize": "^6.21.2"
  }
}
